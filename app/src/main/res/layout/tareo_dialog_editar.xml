<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="280dp"
    android:orientation="vertical"
    android:background="@drawable/curve_shap"
    >
    <TextView
        android:id="@+id/txt_titulo_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:fontFamily="@font/latoregular"
        android:textColor="#0050B2"
        android:layout_below="@+id/edittext_mininicio"

        />

    <TextView
        android:id="@+id/txt_hora_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora Fin"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="135dp"
        app:fontFamily="@font/latoregular"
        android:textColor="#0050B2"
        android:layout_below="@+id/txt_titulo_dialog"

        />
    <TextView
        android:id="@+id/txt_titulo_campo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora Fin"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="135dp"
        app:fontFamily="@font/latoregular"
        android:textColor="#0050B2"
        android:layout_below="@+id/txt_titulo_dialog"

        />
    <EditText
        android:id="@+id/edittext_horafin"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        app:fontFamily="@font/latoregular"
        android:layout_below="@+id/txt_titulo_campo"
        />

    <TextView
        android:id="@+id/id_puntos2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:fontFamily="@font/latoregular"
        android:layout_toRightOf="@+id/edittext_horafin"
        android:textAlignment="center"
        android:layout_below="@+id/txt_titulo_campo"


        />
    <EditText
        android:id="@+id/edittext_minfin"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="2"
        android:layout_marginTop="20dp"

        android:layout_toRightOf="@+id/edittext_horafin"
        android:textAlignment="center"
        app:fontFamily="@font/latoregular"
        android:layout_below="@+id/txt_titulo_campo"

        />

    <Button
        android:id="@+id/btn_no"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_minfin"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/btn_yes"
        android:background="@android:color/white"
        android:clickable="true"

        android:text="Cancelar"

        android:textColor="#5DBCD2"

        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_minfin"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/white"
        android:text="Modificar"
        android:textColor="#5DBCD2"

        android:textStyle="bold" />
</RelativeLayout>